{
    "name": "getpop/comments-wp",
    "type": "library",
    "description": "Implementation for WordPress of contracts from package \"Comments\"",
    "keywords": [
        "PoP",
        "comments-wp"
    ],
    "homepage": "https://github.com/PoPSchema/comments-wp",
    "license": "MIT",
    "authors": [
        {
            "name": "Leonardo Losoviz",
            "email": "leo@getpop.org",
            "homepage": "https://getpop.org"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php" : "~7.1",
        "getpop/comments": "dev-master",
        "getpop/customposts-wp": "dev-master",
        "getpop/migrate-comments-wp": "dev-master"
    },
    "require-dev": {
        "phpunit/phpunit": ">=9.2",
        "squizlabs/php_codesniffer": "^3.0",
        "szepeviktor/phpstan-wordpress": "^0.6.2"
    },
    "autoload": {
        "psr-4": {
            "PoP\\CommentsWP\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PoP\\CommentsWP\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests",
        "analyse": "phpstan analyse -c phpstan.neon.dist --memory-limit 256K"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
